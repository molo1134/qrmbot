use strict;
use utf8;
use Encode qw(decode);
use feature 'unicode_strings';
binmode(STDOUT, ":utf8");

use File::Basename;
use Cwd 'realpath';
use lib dirname(realpath(__FILE__));
use Colors;

@ARGV = map { decode "utf-8", $_ } @ARGV;
@ARGV = split(' ', join(' ', @ARGV));

# ── IRC / terminal color helpers ──────────────────────────────────────────────
# Raw IRC codes rather than composing Colors.pm fns, so bold+italic+color work.
my $irc = ($Colors::highlight eq "irc");
sub ac   { $irc ? "\x1D\x0314$_[0]\x0F"  : "\e[2;3m$_[0]\e[0m"  }  # grey italic (action)
sub blem { $irc ? "\x02\x0312$_[0]\x0F"  : "\e[1;34m$_[0]\e[0m" }  # bold lightblue
sub bldl { $irc ? "\x0312$_[0]\x0F"      : "\e[34m$_[0]\e[0m"   }  # lightblue
sub rdem { $irc ? "\x02\x034$_[0]\x0F"   : "\e[1;31m$_[0]\e[0m" }  # bold red
sub rddl { $irc ? "\x035$_[0]\x0F"       : "\e[31m$_[0]\e[0m"   }  # dark red
sub elem { $irc ? "\x02\x038$_[0]\x0F"   : "\e[1;33m$_[0]\e[0m" }  # bold yellow
sub eldl { $irc ? "\x038$_[0]\x0F"       : "\e[33m$_[0]\e[0m"   }  # yellow
sub fiem { $irc ? "\x02\x037$_[0]\x0F"   : "\e[1;31m$_[0]\e[0m" }  # bold orange (fire emphasis)
sub fidl { $irc ? "\x037$_[0]\x0F"       : "\e[0;31m$_[0]\e[0m" }  # orange (fire dialogue)
sub ysfmt{ $irc ? "\x02\x033$_[0]\x0F"   : "\e[1;32m$_[0]\e[0m" }  # bold green  (YES)
sub nofmt{ $irc ? "\x02\x034$_[0]\x0F"   : "\e[1;31m$_[0]\e[0m" }  # bold red    (NO)

# ── Standard 8-ball responses ─────────────────────────────────────────────────
my @standard = (
    "It is certain.",
    "It is decidedly so.",
    "Without a doubt.",
    "Yes, definitely.",
    "You may rely on it.",
    "As I see it, yes.",
    "Most likely.",
    "Outlook good.",
    "Yes.",
    "Signs point to yes.",
    "Reply hazy, try again.",
    "Ask again later.",
    "Better not tell you now.",
    "Cannot predict now.",
    "Concentrate and ask again.",
    "Don't count on it.",
    "My reply is no.",
    "My sources say no.",
    "Outlook not so good.",
    "Very doubtful.",
);

# ── Legendary responses ───────────────────────────────────────────────────────
# 23 responses split evenly across three tiers.
# Each is a sub($is_yes) returning a list of formatted output lines.
my @legendary = (

  # ═══ BLUE TIER — Cosmic Wonder ═══════════════════════════════════════════

  # The Ancient Prophecy
  sub { my $y = shift;
    (ac("the orb shudders..."),
     ac("dust of a thousand ages rises from its surface..."),
     blem("it glows \x{2014} slowly, deeply \x{2014} BLUE"),
     bldl('"In the age before memory, this question was carved into the bones of the earth."'),
     $y ? ysfmt('"The answer has always been: YES."')
        : nofmt('"The answer has always been: NO."')) },

  # The Reluctant Oracle
  sub { my $y = shift;
    (ac("the orb goes dark"),
     ac("..."),
     ac("it fights it. you can tell. it doesn't want to show you this."),
     blem("the blue light wins."),
     bldl('"...Fine. You deserve to know. But do not ask again."'),
     $y ? ysfmt('"YES."') : nofmt('"NO. And I mean it."')) },

  # The Cosmic Horror
  sub { my $y = shift;
    (ac("the orb reaches out... further than it usually does..."),
     ac("something reached back"),
     blem("it glows blue but the light feels wrong"),
     $y ? ysfmt('"I looked. I saw. The answer is YES."')
        : nofmt('"I looked. I saw. The answer is NO."'),
     bldl('"Please do not ask what else I saw."')) },

  # The Joyful Burst
  sub { my $y = shift;
    (blem("THE ORB WAKES UP"),
     blem("IT HAS BEEN WAITING FOR THIS EXACT QUESTION"),
     blem("BLUE. SO MUCH BLUE. GLORIOUS BLUE."),
     bldl('"OH THIS ONE. THIS IS A GOOD ONE."'),
     $y ? ysfmt('"YES. YES YES YES."')
        : nofmt('"No. But asked so beautifully."')) },

  # The Ominous Agreement
  sub { my $y = shift;
    (ac("the orb is very still"),
     blem("the orb glows blue \x{2014} not warm. cold. certain."),
     $y ? ysfmt('"...Yes."') : nofmt('"...No."'),
     bldl('"I just want you to sit with that for a moment."')) },

  # The Weary God
  sub { my $y = shift;
    (ac("the orb has seen empires. it has seen them fall."),
     ac("it glows blue, tired blue, the blue of something very old"),
     $y ? bldl('"You want to know if YES?"') : bldl('"You want to know if NO?"'),
     $y ? ysfmt('"Sure. Fine. It\'s YES."') : nofmt('"No. As it always was."'),
     bldl('"The orb will now rest."')) },

  # The Hype Man
  sub { my $y = shift;
    (blem("YOOOO"),
     blem("THE ORB IS GLOWING BLUE ARE YOU SEEING THIS"),
     blem("THIS IS A LEGENDARY PROPHECY CHAT"),
     bldl('"Okay okay okay. The answer?"'),
     $y ? ysfmt('"IT\'S YES."') : nofmt('"It\'s no. But still legendary tho."')) },

  # ═══ RED TIER — Cursed Doom ═══════════════════════════════════════════════

  # The Warning
  sub { my $y = shift;
    (ac("the orb flickers"),
     ac("something is wrong"),
     rdem("it glows RED"),
     rddl('"This question should not have been asked."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"The orb will not say more. For your sake."')) },

  # The Curse
  sub { my $y = shift;
    (ac("the orb goes cold"),
     ac("the red comes from somewhere deep. somewhere bad."),
     rddl('"Seven people asked this question before you."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"You are the eighth."')) },

  # The Reluctant Truth
  sub { my $y = shift;
    (ac("the orb tries to show you blue"),
     ac("it cannot"),
     rdem("RED. it's RED. it's always been RED for this one."),
     rddl('"I tried to protect you from this answer."'),
     $y ? ysfmt('"YES. God help you, yes."') : nofmt('"NO."')) },

  # The Void Stares Back
  sub { my $y = shift;
    (ac("the orb reaches out to find your answer"),
     ac("something on the other side noticed"),
     rdem("RED. wrong. all wrong."),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"It knows you asked."')) },

  # The Omen
  sub { my $y = shift;
    (ac("the orb begins to spin \x{2014} slowly \x{2014} without being touched"),
     ac("it stops"),
     rdem("RED"),
     rddl('"The birds knew. They left this morning."'),
     $y ? ysfmt('"The answer is YES."') : nofmt('"The answer is NO."'),
     rddl('"You\'ll understand later."')) },

  # The Disappointed Elder
  sub { my $y = shift;
    (ac("the orb has seen this before"),
     ac("it glows red, slow and heavy, like a dying star"),
     rddl('"Oh, child."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"The orb will light a candle for you."')) },

  # The Understated Doom
  sub { my $y = shift;
    (rdem("red"),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"Anyway."')) },

  # The Regret
  sub { my $y = shift;
    (ac("the orb glows red and does not stop"),
     ac("it's been a long time since it glowed red this long"),
     rddl('"You asked. That means something."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     rddl('"The orb is sorry. It really is."')) },

  # ═══ ELECTRIC TIER — Chaotic Gremlin Energy ═══════════════════════════════

  # The Surge
  sub { my $y = shift;
    (elem("the orb CRACKS"),
     ac("sparks. actual sparks."),
     ac("it's doing it again"),
     $y ? ysfmt('"THE ANSWER IS YES"') : nofmt('"THE ANSWER IS NO"'),
     elem('"THE ORB DOES NOT APOLOGIZE FOR THE SPARKS"')) },

  # The Short Circuit
  sub { my $y = shift;
    (ac("the orb flickers \x{2014} on \x{2014} off \x{2014} on \x{2014} off \x{2014}"),
     elem("zzzt"),
     elem("zzzzZZZZT"),
     ac("........okay it's fine"),
     $y ? ysfmt('"Yes."') : nofmt('"No."'),
     eldl('"The orb is fine."')) },

  # The Overload
  sub { my $y = shift;
    (ac("something is building in the orb"),
     ac("it's too much. it's way too much."),
     elem("CRACK. ZAP. the air smells like ozone."),
     $y ? ysfmt('"YOUR ANSWER IS YES AND IT ARRIVES WITH VOLTAGE"')
        : nofmt('"NO. ALSO VOLTAGE."')) },

  # The Unstable Prophet
  sub { my $y = shift;
    (ac("the orb crackles"),
     ac("it crackles more"),
     ac("it crackles so much you start to question your life choices"),
     $y ? ysfmt('"yES"') : nofmt('"nO"'),
     $y ? ysfmt('"sorry. still sparking. yES."') : nofmt('"sorry. still sparking. nO."')) },

  # The Power It Cannot Control
  sub { my $y = shift;
    (ac("the orb didn't mean to do this"),
     ac("the electricity just \x{2014} it just happens sometimes"),
     elem("ZAP"),
     $y ? ysfmt('"The orb would like YES on the record."')
        : nofmt('"The orb would like NO on the record."'),
     eldl('"It would also like to apologize for your eyebrows."')) },

  # The Ancient Machine
  sub { my $y = shift;
    (ac("deep within the orb, something mechanical stirs"),
     ac("gears that shouldn't exist. coils. voltage."),
     elem("K\x{0335}\x{0336}R\x{0336}K\x{0336}K\x{0335}K\x{0336}"),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     eldl('"The machine has spoken. Do not tap the glass."')) },

  # The Reluctant Lightning
  sub { my $y = shift;
    (ac("the orb is calm"),
     ac("it is still calm"),
     ac("it is \x{2014} ZZT \x{2014} still \x{2014} CRACK \x{2014} calm \x{2014}"),
     $y ? ysfmt('"...YES."') : nofmt('"...NO."'),
     ac("the orb is calm again"),
     ac("mostly")) },

  # The Meltdown
  sub { my $y = shift;
    (elem("WARNING"),
     elem("WARNING"),
     ac("crackling intensifies"),
     $y ? ysfmt('"THE ANSWER IS YES"') : nofmt('"THE ANSWER IS NO"'),
     elem('"THE ORB NEEDS A MOMENT"'),
     ac("the crackling stops"),
     ac("the orb smells like burnt toast")) },

  # ═══ FIRE TIER — Ancient, Biblical Energy ════════════════════════════════

  # The Pyre
  sub { my $y = shift;
    (ac("the orb begins to warm"),
     ac("it gets warmer"),
     fiem("it gets much warmer"),
     fidl('"Something burns in the orb that does not go out."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     fidl('"It has always been burning. You just couldn\'t see it before."')) },

  # The Consumed
  sub { my $y = shift;
    (fiem("the orb ignites"),
     fiem("it should not be doing this"),
     fiem("it does not care"),
     fidl('"ASK AGAIN AND I WILL ASK THE FIRE."'),
     $y ? ysfmt('"The fire says YES."') : nofmt('"The fire says NO."'),
     fidl('"The fire is satisfied."')) },

  # The Offering
  sub { my $y = shift;
    (fiem("the orb glows orange. then gold. then white."),
     ac("the heat reaches through the screen"),
     fidl('"Your question has been received."'),
     fidl('"Your question has been burned."'),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     fidl('"The smoke carries it to wherever answers go."')) },

  # The Old God
  sub { my $y = shift;
    (ac("something ancient stirs in the orb"),
     ac("it remembers when they built fires for it"),
     fiem("it misses the fires"),
     $y ? ysfmt('"YES."') : nofmt('"NO."'),
     fidl('"The orb would appreciate a small fire in its honor."'),
     fidl('"This is not a joke."')) },

  # The Calm Inferno
  sub { my $y = shift;
    (fiem("the orb is on fire"),
     fiem("completely on fire"),
     fiem("it seems fine with this"),
     $y ? ysfmt('"Yes."') : nofmt('"No."'),
     fidl('"The orb is fine."'),
     fidl('"The fire is fine."'),
     fidl('"Everything is fine."')) },

);

# ── Main logic ────────────────────────────────────────────────────────────────
my $is_orb = grep { $_ eq "--orb" } @ARGV;

if ($is_orb && int(rand(50)) == 0) {
    # 1% chance: legendary response
    my $is_yes = int(rand(2));
    my $resp   = $legendary[int(rand(scalar @legendary))];
    print "$_\n" for $resp->($is_yes);
} else {
    # Standard 8-ball response
    print $standard[int(rand(scalar @standard))], "\n";
}
